package gooseGame;


/**
 * Class for the players. A player and his/her goose are assimilated.
 * 
 * @author marion
 *
 */
public class Player {

	private Cell cell;
	
	public Player(){
		this.cell = null;
	}
	
	public Cell getCell(){
		return this.cell;
	}
	
	public void setCell(Cell cell){
		this.cell = cell;
	}
	
	public boolean equals(Object o){
		if (o == this) return true;
		if (o == null) return false;
		if (!(o instanceof Player)) return false;
		Player p = (Player) o;
		return (p.getCell().getIndex() == this.getCell().getIndex());
	}
}
